#-----------
# Functions
#-----------
update() {
  pushd $HOME &> /dev/null
  mr up
  popd &> /dev/null
}

source_if_exists() {
  [[ -z $1 ]] && return
  [[ -e $1 ]] && source $1
}

path_if_exists() {
  [[ -z $1 ]] && return
  [[ -e $1 ]] && export PATH="$1:${PATH}"
}

jobs_done() {
  if [[ $? == 0 ]]
  then
    paplay ~/Music/jobs-done.mp3
  else
    paplay ~/Music/oh-noo.mp3
  fi
}

bw_login() {
  export BW_SESSION="$(/usr/bin/bw unlock --raw)"
}

